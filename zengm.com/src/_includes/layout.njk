<!doctype html>
<html lang="en">
  <head>
    {% include "head-common.njk" %}
    <title>ZenGM > {{ title }}</title>
    <style>
#face {
  height: 48px;
  width: 36px;
	cursor: pointer;
	user-select: none;
	-webkit-user-select: none;
}

.top-nav {
  background-color: #e9ecef;
}

.breadcrumb {
  background-color: inherit;
}
    </style>
  </head>
  <body>

<div class="d-flex bg-light mb-3 top-nav">
  <div id="face" class="ml-3"></div>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb mb-0">
      <li class="breadcrumb-item"><a href="/">ZenGM</a></li>
      <li class="breadcrumb-item active" aria-current="page">{{ title }}</li>
    </ol>
  </nav>
</div>
      
<main role="main" class="container">
  {{ content | safe }}
</main>

<script src="https://dumbmatter.com/facesjs/build/bundle.js"></script>
<script>
var div = document.getElementById("face");

function genFace() {
  var face = faces.generate({"teamColors":["#695FAB","#f05742","#cccccc"]});
  if (face.hair.color === "#0f0902") {
    face.hair.color = "#272421";
  }
  faces.display(div, face);
}

genFace();

face.addEventListener("click", genFace);
</script>
</body>
</html>
